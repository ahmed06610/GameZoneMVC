@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-success rounded-4 mt-5 overflow-hidden ">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    <span class="bage bg-info fs-5 mb-4">@Model.Category?.Name</span>
                    <p class="f-5 mt-5">-@Model.Description</p>
                </div>
                <div>
                    @foreach (var gamedevice in Model.Devices)
                    {
                        <i class="@gamedevice.Device.Icon me-2 fs-4"></i>
                    }
                </div>
             </div>
            <div class="col-md-4">
            <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100" style="height:600px" />
            </div>
        </div>
    </div>
</div>
